<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主色深色版本 -->
        <item name="colorPrimary">@color/md_dark_primary</item>
        <item name="colorOnPrimary">@color/md_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_dark_onPrimaryContainer</item>

        <!-- 次要色深色版本 -->
        <item name="colorSecondary">@color/md_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_dark_onSecondaryContainer</item>

        <!-- 状态栏 -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>
    
</resources>